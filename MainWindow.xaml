<Window x:Class="_312840DigitalNumbers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_312840DigitalNumbers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="txtInput" />
        <Button x:Name="btnProcess" Click="btnProcess_Click" Content="Display" />
        <StackPanel Orientation="Horizontal">
            <Label x:Name="lblOutput1" FontFamily="Consolos" />
            <Label x:Name="lblOutput2" FontFamily="Consolos" />
            <Label x:Name="lblOutput3" FontFamily="Consolos" />
        </StackPanel>
    </StackPanel>
</Window>
